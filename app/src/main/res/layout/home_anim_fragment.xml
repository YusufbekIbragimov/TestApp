<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collapseToolBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:background="@color/purple_500">

    <uz.yusufbekibragimov.testapp.SwipeRefreshMotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_gradient_full"
        android:overScrollMode="never"
        app:layoutDescription="@xml/home_anim_fragment_xml_motionlayout_scene2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_colorFilter="@color/white"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/main_screen_anim" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nestedView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lottieView"
            tools:itemCount="3"
            tools:listitem="@layout/item_design" />

        <!--<ImageView
            android:id="@+id/lottieView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha="0"
            android:elevation="1dp"
            android:src="@drawable/ic_search"
            app:layout_constraintTop_toBottomOf="@id/toolBar" />-->

    </uz.yusufbekibragimov.testapp.SwipeRefreshMotionLayout>

</androidx.constraintlayout.widget.ConstraintLayout>