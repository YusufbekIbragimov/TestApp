<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    motion:defaultDuration="100">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="100"
        motion:layoutDuringTransition="ignoreRequest">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="95"
                motion:motionTarget="@+id/lottieView" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="99"
                motion:motionTarget="@+id/lottieView" />
        </KeyFrameSet>
        <OnSwipe
            motion:autoCompleteMode="continuousVelocity"
            motion:dragDirection="dragDown"
            motion:dragScale="10"
            motion:maxAcceleration="5000"
            motion:maxVelocity="5000"
            motion:moveWhenScrollAtTop="false"
            motion:onTouchUp="neverCompleteToEnd"
            motion:touchAnchorId="@+id/nestedView"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/lottieView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:alpha="0"
            android:elevation="1dp"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/nestedView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="2dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/lottieView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:alpha="1"
            android:elevation="1dp"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/nestedView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="180dp"
            android:elevation="2dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>