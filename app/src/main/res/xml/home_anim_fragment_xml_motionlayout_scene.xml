<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="100">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/lottieView"
               motion:framePosition="95"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/lottieView"
               motion:framePosition="99"
               android:alpha="1" />
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/nestedView"
            motion:dragDirection="dragUp"
            motion:maxVelocity="5000"
            motion:maxAcceleration="5000"
            motion:onTouchUp="autoCompleteToEnd"
            motion:touchAnchorSide="top"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/lottieView"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/nestedView"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/lottieView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/lottieView"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/nestedView"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/lottieView" />
    </ConstraintSet>
</MotionScene>